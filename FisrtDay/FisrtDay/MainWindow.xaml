<Window x:Class="FisrtDay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FisrtDay"
        mc:Ignorable="d"
        Title="Столица" Height="250" Width="525" MinHeight="250" MinWidth="525" WindowStartupLocation="CenterScreen" FontSize="20" Background="LightBlue">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="btnBuy" Content="Купить" Width="200" Height="50" Background="White"/>
            <Button x:Name="btnSale" Content="Продать" Width="200" Height="50" Background="White" Margin="20 0 0 0"/>
        </StackPanel>
    </Grid>
</Window>
