<Window x:Class="FisrtDay.AddNewCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FisrtDay"
        mc:Ignorable="d"
        Title="AddNewCategoryWindow" FontSize="16" Height="200" Width="400" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="LightBlue">
    <Grid>
        <Button Click="click_Back" Content="Назад" Background="White" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Добавление новой категории" TextAlignment="Center" Margin="10"/>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Наименование: "/>
                <TextBox x:Name="tbxName" Width="150" MaxLength="50"/>
            </StackPanel>
            <Button Click="click_AddNewCategory" Content="Добавить" Background="White" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
